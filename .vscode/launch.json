{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Test",
            "args": [
                "-r",
                "ts-node/register",
                "./tests/**/*.ts",
                "--timeout",
                "999999"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "runtimeVersion": "16.15.1",
            "request": "launch",
            "name": "Example Timeseries",
            "pauseForSourceMap": true,
            "program": "${workspaceFolder}/tests/examples/timeseries/timeseries.ts",
            "preLaunchTask": "tsc: build - tests/examples/timeseries/tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/tests/examples/timeseries/dist/**/*.js"
            ]
        }
    ]
}